<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br>
    
    
    
    <% if customer_signed_in? %>
    
      <%= link_to "Logo", root_path %>
      <%= link_to "マイページ", customers_my_page_path %>
      <%= link_to "商品一覧", items_path %>
      <%= link_to "カート", cart_items_path %>
      <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      <br>
      <p>ようこそ、<%= current_customer.last_name %>さん</p>
      
    <% elsif admin_signed_in? %>
    
      <%= link_to "Logo", admin_root_path %>
      <%= link_to "商品一覧", admin_root_path %>
      <%= link_to "会員一覧", admin_root_path %>
      <%= link_to "注文履歴一覧", admin_root_path %>
      <%= link_to "ジャンル一覧", admin_root_path %>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
    
    
    <% else %>
    
      <%= link_to "About", about_path %>
      <%= link_to "商品一覧", items_path %>
      <%= link_to "新規登録", new_customer_registration_path %>
      <%= link_to "ログイン", new_customer_session_path %>
      <%#= link_to "管理者ログイン", new_admin_session_path %>
      
    <% end %>
    
    <br>
    
    <%= flash[:notice] %>
    
    <%= yield %>
  </body>
</html>
