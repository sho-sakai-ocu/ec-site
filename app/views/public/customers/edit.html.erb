<h5 class="bg-light">会員情報編集</h5>

<%= form_with model: @customer, url: customers_path do |f| %>

  <table>
    <tr>
      <td><%= f.label :last_name, "氏名" %></td>
      <td>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.text_field :first_name %>
      </td>
    </tr>

    <tr>
      <td><%= f.label :last_name_kana, "フリガナ" %></td>
      <td>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </td>
    </tr>

    <tr>
      <td><%= f.label :postal_code, "郵便番号" %></td>
      <td><%= f.text_field :postal_code %></td>
    </tr>

    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <td><%= f.label :telephone_number, "電話番号" %></td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>

    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email %></td>
    </tr>

    <tr>
      <td></td>
      <td>
        <%= f.submit "編集内容を保存", class:"btn btn-success btn-sm" %>
        <%= link_to "退会する", customers_confirm_path, class:"btn btn-danger btn-sm ml-5" %>
      </td>
    </tr>
  </table>
<% end %>


