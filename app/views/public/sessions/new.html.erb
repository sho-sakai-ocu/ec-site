<h5 class="bg-light">会員の方はこちらからログイン</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="ml-4">
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
    </tr>

    <tr>
      <td><%= f.label :password, "パスワード" %></td>
      <td><%= f.password_field :password, autocomplete: "current-password" %></td>
    </tr>

    <tr>
      <td></td>
      <td><%= f.submit "ログイン" %></td>
    </tr>
  </table>

<% end %>


<h5 class="mt-5 bg-light">会員登録がお済みでない方</h5>
<div class="ml-4">
  <%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。
</div>