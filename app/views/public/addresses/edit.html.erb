<h4>配送先編集</h4>
<%= render "public/shared/error_messages", resource: @address %>
<%= form_with model: @address, class:"mt-4" do |f| %>
  <table>
    <tr>
      <td><%= f.label :last_name_kana, "郵便番号(ハイフンなし)" %></td>
      <td><%= f.text_field :postal_code %></td>
      <td></td>
    </tr>

    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td colspan="2"><%= f.text_field :address %></td>
    </tr>

    <tr>
      <td><%= f.label :name, "宛名" %></td>
      <td><%= f.text_field :name %></td>
      <td></td>
    </tr>

    <tr>
      <td></td>
      <td></td>
      <td><%= f.submit "変更内容を保存", class:"btn btn-success btn-sm" %></td>
    </tr>

  </table>
<% end %>