<h4>ショッピングカート</h4>

<table class="table mt-4">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag Item.find(cart_item.item_id).get_image(80, 80), class:"mr-3" %>
          <%= Item.find(cart_item.item_id).name %>
        </td>
        <td><%= Item.find(cart_item.item_id).price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= Item.find(cart_item.item_id).price * cart_item.amount %></td>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger bt-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
