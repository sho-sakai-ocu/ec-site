<h5 class="bg-light">新規会員登録</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table>
    <tr>
      <td>名前</td>
      <td>
        <%#= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
      </td>
      <td>
        <%#= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "道子"%>
      </td>
    </tr>

    <tr>
      <td>フリガナ</td>
      <td>
        <%#= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %>
      </td>
      <td>
        <%#= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
      </td>
    </tr>

    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com"  %></td>
    </div>

    <tr>
      <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
      <td><%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000" %></td>
    </tr>

    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
    </div>

    <tr>
      <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
      <td><%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: "00000000000" %></td>
    </div>

    <tr>
      <td><%= f.label :password, "パスワード(6文字以上)" %></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>

    <tr>
      <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>

    <tr>
      <td></td>
      <td><%= f.submit "新規登録" %></td>
    <tr>
  </table>
<% end %>

<h5 class="bg-light mt-5">既に登録済みの方</h5>

<%= link_to "こちら", new_customer_session_path, class:"ml-4" %>　からログインしてください。
