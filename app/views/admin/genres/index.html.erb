<h4>ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.label :name, 'ジャンル名' %>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit "新規登録", class:"btn btn-success btn-sm" %>
<% end %>

<table class="mt-5 table">
  <tr class="bg-light"><th>ジャンル</th></tr>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success btn-sm" %></td>
    </tr>
  <% end %>
</table>
