<h4>商品一覧</h4>
<%= link_to "追加", new_admin_item_path, class:"btn btn-success btn-sm" %>

<table class="table table-bordered mt-3">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= Genre.find(item.genre_id).name %></td>
        <td>
          <% if item.is_active %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

