<h3>商品新規登録</h3>
<%= form_with model: @item do  |f| %>

  <div class="field">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction %>
  </div>
  
  <div class="field">
    <%= f.label :price, "税抜価格" %>
    <%= f.text_field :price %>円
  </div>
  
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
